<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.anonym_login">

    <!-- MV_004 | Verificación -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/btnTopAppBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:navigationIcon="@drawable/baseline_arrow_back_24" />

            <ImageView
                android:layout_width="234dp"
                android:layout_height="215dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="localito_logo"
                android:src="@drawable/localito_logo" />
        </com.google.android.material.appbar.AppBarLayout>
        <!-- Campo para ingresar codigo de verificación -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingresa el pin de confirmación"
                android:textSize="13dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pinDigit1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/pinDigit2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/pinDigit3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/pinDigit4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

        <!-- Boton para continuar -->
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/seed"
            android:textSize="18dp"
            android:textColor="@color/md_theme_light_onPrimary"
            android:text="Continuar"
            android:layout_marginBottom="10dp" />

        <!-- El boton para reenviar codigo -->
        <Button
            android:id="@+id/btn_to_resend"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:textSize="13dp"
            android:backgroundTint="@color/md_theme_light_onPrimary"
            android:text="Reenviar codigo"
            android:textColor="@color/md_theme_light_shadow" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout >
